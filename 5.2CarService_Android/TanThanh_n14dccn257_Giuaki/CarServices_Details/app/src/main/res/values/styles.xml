<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CarServicesAppTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorAccent">@color/secondaryColor</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="android:textViewStyle">@style/primaryLargeTextStyle</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:buttonStyleToggle">@style/toggleButtonStyle</item>



    </style>

    <style name="primaryTextStyle" parent="CarServicesAppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
    </style>

    <style name="primarySmallTextStyle" parent="CarServicesAppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
    </style>
    
    <style name="primaryLargeTextStyle" parent="CarServicesAppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="circleButtonStyle" parent="buttonStyle" >
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@drawable/circle_button_selector</item>
    </style>

    <style name="buttonStyle" parent="CarServicesAppTheme" >
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <style name="editTextStyle" parent="CarServicesAppTheme">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:minHeight">@dimen/editTextMinHeight</item>
    </style>

    <style name="toggleButtonStyle" parent="CarServicesAppTheme">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <style name="buttonStyle2" parent="CarServicesAppTheme">
        <item name="android:background">@drawable/button_selector_2</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">25dp</item>
    </style>

</resources>
